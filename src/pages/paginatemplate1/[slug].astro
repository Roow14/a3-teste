</main>

    <footer class="border-t border-gray-200 py-4 bg-gray-50">
      <div class="max-w-3xl mx-auto px-4">
        <div class="flex flex-wrap justify-center items-center gap-4">
          <a href="/shipping" class="text-gray-600 hover:text-gray-900">Shipping</a>
          <a href="/contact" class="text-gray-600 hover:text-gray-900">Contact</a>
          <a href="/privacy-policy" class="text-gray-600 hover:text-gray-900">Privacy Policy</a>
          <a href="/terms-of-service" class="text-gray-600 hover:text-gray-900">Terms Of Service</a>
        </div>
      </div>
    </footer>
  

  <script is:inline>
    document.addEventListener("DOMContentLoaded", function () {
      [...document.getElementsByTagName("a")]
        .filter((link) => link.href.indexOf("#") === -1)
        .forEach((link) => {
          link.href +=
            link.href.indexOf("?") !== -1
              ? location.search.replace("?", "&")
              : location.search;
        });
    });
  </script>

<style>
  body, html {
    margin: 0;
    padding: 0;
    height: 100%;
    font-family: 'Arial', sans-serif;
    background-color: #f3f4f6; /* bg-gray-100 */
